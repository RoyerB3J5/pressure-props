---
import { Icon } from 'astro-icon/components';
import BeforeAfter from '../../components/BeforeAfter.astro';
import Button from '../../components/Button.astro';

type Translations = typeof import('../../i18n/es').default;
type ExperienceContent = Translations['main']['experience'];
interface Props {
  content: ExperienceContent;
}
const { content } = Astro.props as Props;
---
<section class="pt-[510px] md:pt-[276px] pb-[58px] md:pb-[115px] flex flex-col justify-center items-center gap-8 md:gap-[52px] max-w-screen lg:max-w-[1145px] px-4 lg:px-0">
  <div class="w-full flex flex-col md:flex-row items-center md:items-start justify-center gap-8 md:gap-10 lg:gap-[86px]">
    <div class="relative order-2 md:order-1 w-full md:w-[581px] h-[574px] md:h-[647px]" data-aos="fade-right">
      <!-- Experience 1: Fila 1, Columna 1 -->
      <div class="absolute block md:hidden lg:block bottom-0 md:top-0 left-0 w-full md:w-[236px] h-[288px] md:h-[244px] rounded-[10px] overflow-hidden">
        <img src="/main/experience1.webp" alt="Experiencia 1" width="802" height="454" style="display: block; width: 100%; height: 100%; object-fit: cover;" loading="lazy" decoding="async">
      </div>
      
      <!-- Experience 2: Fila 2, Columna 1 -->
      <div class="hidden lg:block absolute bottom-0 left-0 w-full md:w-[236px] h-[544px] md:h-[382px] rounded-[10px] overflow-hidden">
        <img src="/main/experience2.webp" alt="Experiencia 2" width="2048" height="1536" style="display: block; width: 100%; height: 100%; object-fit: cover;" loading="lazy" decoding="async">
      </div>
      
      <!-- Experience 3: Toda la Columna 2 -->
      <div class="absolute top-0 right-0 w-full lg:w-[324px] h-[254px] md:h-[647px] rounded-[10px] overflow-hidden">
        <img src="/main/experience3.webp" alt="Experiencia 3" width="1500" height="100" style="display: block; width: 100%; height: 100%; object-fit: cover; object-position: 17% center;"  loading="lazy" decoding="async">
      </div>
    </div>
    <div class="order-1 md:order-1 flex flex-col items-center md:items-start justify-center py-[37px] md:py-0 max-w-none md:max-w-[478px] max-h-none md:max-h-[648px]" data-aos="fade-left">
      <h2 class="text-[28px] md:text-[44px] font-semibold leading-[24px] text-main h-[43px] md:h-[72px] flex items-center">JZ Pressure <span class="ml-1 text-secondary">Pros</span></h2>
      <p class="text-[16px] md:text-[18px] leading-[20px] md:leading-[25px] text-center md:text-start font-bold max-w-none md:max-w-[336px] text-secondary" set:html={content.description}></p>
      <p set:html={content.description2} class="mt-[17px] md:mt-5 text-[13px] md:text-[16px] leading-[18px] md:leading-[25px] text-center md:text-start font-medium text-secondary"></p>
      <div class="flex flex-col md:flex-row justify-center items-center md:items-start gap-[29px] md:gap-[43px] mt-[28px] md:mt-[73px] w-full py-1 md:py-0">
        <div class="flex flex-col justify-between items-center md:items-start gap-[29px] md:gap-[62px] w-full">
          <div class="flex flex-col gap-2 md:gap-[16px]">
            {content.items.map(item=>(
              <div class="flex items-center gap-[7px] md:gap-4">
                <Icon name={"check"} class={"shrink-0 h-[15px] md:h-[44px] w-[15px] md:w-[44px] text-main"}/>
                <p class="text-[14px] md:text-[16px] font-medium leading-[25px] text-secondary">{item}</p>
              </div>
            ))}
          </div>
        </div>
        <div class="max-w-none md:max-w-[173px] flex flex-col justify-center items-center gap-[3px] px-[24px] md:px-[35.67px] pt-[4.5px] md:pt-[27px] pb-[10.5px] md:pb-[39px] border-t-[5px] border-secondary bg-main text-white">
          <p class="text-[32px] md:text-[50px] text-center font-semibold leading-[65px]">7+</p>
          <p class="text-[15px] md:text-[16px] uppercase font-semibold leading-[20px] text-center">{content.years}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-col lg:flex-row justify-center items-center gap-[18px] md:gap-8 lg:gap-[45px] w-full">
    <BeforeAfter beforeImage='/main/before-1-2.webp' afterImage='/main/before-1-1.webp'/>
    <BeforeAfter beforeImage='/main/before-2-2.webp' afterImage='/main/before-2-1.webp'/>
  </div>
</section>