---
import Button from '../../components/Button.astro';

type Translations = typeof import('../../i18n/es').default;
type RenderingContent = Translations['main']['information']['rendering'];
interface Props {
  content: RenderingContent;
}
const { content } = Astro.props as Props;
---
<div class="shadow-design flex justify-between items-center px-[30.5px] py-[50px] w-full rounded-[15px] bg-white">
  <div class="flex flex-col justify-center items-center max-w-[537px]">
    <h3 set:html={content.title} class="text-[40px] font-normal leading-[46px] text-center text-primary-dark-bold mb-[18px] "></h3>
    <p class="text-[16px] leading-[25px] font-medium mb-8">{content.text}</p>
    <Button class='button-gradient px-[38px] '>
      {content.button}
    </Button>
  </div>
  <div class="w-[550px] h-[316px] rounded-[15px] bg-[#787878]"></div>
</div>